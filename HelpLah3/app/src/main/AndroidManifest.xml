<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.helplah">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launch_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            android:launchMode = "singleInstance"
            <intent-filter>
                <action android:name="android.intent.action.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".RequestDetails" />
        <activity android:name=".SendRequestActivity" />
        <activity android:name=".MainActivity"
            android:launchMode = "singleInstance"
            />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".AcceptedRequestDetails" />
        <activity android:name=".MRequestDetail" />
        <activity android:name=".DialogListActivity" />
        <activity
            android:name=".ConversationActivity"
            android:label="@string/title_activity_conversation"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>